{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/chat",
            "dest": "index.js"
        }
    ],
    "env": {
        "OPENAI_API_KEY": "@openai_api_key"  // Укажите переменные окружения в Vercel
    }
}
